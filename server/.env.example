PORT=5000
NODE_ENV=development
AUTO_SEED_ON_START=false

# Database Configuration
# Option 1: Use DATABASE_URL (for production/Render.com)
# DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Use individual config (for local development)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=kudimall_dev
DB_PASSWORD=your_database_password
DB_PORT=5432

# JWT Secret Key (REQUIRED - generate a strong random string, minimum 32 characters)
# CRITICAL SECURITY: Never use default values in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-random-secret-minimum-32-characters-required

# Email Configuration for Seller Verification
# Get Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password

# Customize the sender name shown in emails (hides raw Gmail address)
# Emails will appear as "KudiMall <your-email@gmail.com>" instead of just the raw address
EMAIL_SENDER_NAME=KudiMall

# Email sending timeout in milliseconds (default: 60000 = 60 seconds)
# Increase if your email server is slow or on a poor connection
EMAIL_SEND_TIMEOUT_MS=60000

# For SMTP 587 (STARTTLS), use EMAIL_SECURE=false and EMAIL_REQUIRE_TLS=true
# For SMTP 465 (SSL/TLS), use EMAIL_SECURE=true and EMAIL_REQUIRE_TLS=false
EMAIL_SECURE=false
EMAIL_REQUIRE_TLS=true

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:3000

# Optional: Public frontend URL for email links in production
# If set, this is preferred over FRONTEND_URL for verification/reset links
# PUBLIC_FRONTEND_URL=https://your-frontend-domain.com
