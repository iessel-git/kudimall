PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (for production/Render.com)
# DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Use individual config (for local development)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=kudimall_dev
DB_PASSWORD=your_database_password
DB_PORT=5432

# JWT Secret Key (change this in production)
JWT_SECRET=kudimall-secret-key-change-in-production

# Email Configuration for Seller Verification
# Get Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password

# Set to 'true' to auto-verify accounts when email service is not configured
# Useful during initial deployment before email is set up
SKIP_EMAIL_VERIFICATION=false

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:3000
